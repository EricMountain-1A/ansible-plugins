########################################################

import sys
import yaml

import ansible.constants as C
from ansible import utils
from ansible import errors
from ansible import inventory

########################################################

def flatten(terms):
    ret = []
    for term in terms:
        if isinstance(term, list):
            ret.extend(term)
        else:
            ret.append(term)
    return ret

class Cli(object):

    # ----------------------------------------------

    def __init__(self):
        pass

    # ----------------------------------------------

    def parse(self):
        ''' create an options parser for bin/ansible '''

        parser = utils.SortedOptParser(
            usage='%prog <host-pattern> [options]'
        )
        parser.add_option('-i', '--inventory-file', dest='inventory',
            help="specify inventory host file (default=%s)" % C.DEFAULT_HOST_LIST,
            default=C.DEFAULT_HOST_LIST)
        parser.add_option('--list-hosts', dest='listhosts', action='store_true',
            help="dump out a list of hosts matching input pattern")
        parser.add_option('--list-groups', dest='listgroups', action='store_true',
            help="dump out the list of groups")
        parser.add_option('-t', '--tree', dest='tree', action='store_true',
            help="dump a treeview of groups and hosts")
        parser.add_option('-l', '--limit', default=C.DEFAULT_SUBSET, dest='subset',
            help='further limit selected hosts to an additional pattern')
        parser.add_option('-d', '--depth', default=C.DEFAULT_SUBSET, dest='depth',
            help='when listing tree or groups, don\'t go deeper than depth')

        parser.add_option('-y', '--yaml', dest='yaml', action='store_true',
            help="dump out variables in yaml format")

        parser.add_option('-j', '--json', dest='json', action='store_true',
            help="dump out variables in json format (default)")

        options, args = parser.parse_args()
        if len(args) == 0:
            args = ['all']
        if len(args) > 1:
            parser.print_help()
            sys.exit(1)
        return (options, args)

    # ----------------------------------------------

    def run(self, options, args):

        pattern = args[0]

        I = inventory.Inventory(options.inventory)
        if options.subset:
            I.subset(options.subset)
        hosts = I.list_hosts(pattern)
        groups = I.get_groups()

        if options.listhosts and not options.listgroups:
            for host in hosts:
                print '%s' % host

        elif options.listgroups or options.tree:

            if options.depth:
                maxdepth = int(options.depth)
            else:
                maxdepth = None

            if options.tree:
                options.listhosts = True

            def print_depth(name, depth, extra=""):

                if depth !=  0:
                    tree = "|  " * (depth-1) + "|--"
                else:
                    tree = ""
                print "%s[%s] %s %s" % (tree, depth, name, extra)


            def print_group_tree(group, maxdepth):

                if maxdepth is None or group.depth <= maxdepth:
                    parent_groups_names = [ '%s(%s)' % (x.name, x.depth) for x in group.parent_groups ]
                    groups_hosts_names = [h.name for h in group.hosts]

                    print_depth(group.name, group.depth)
                    if options.listhosts and len(groups_hosts_names) > 0:
                        for h in groups_hosts_names:
                            print_depth(h, group.depth+1)
                    for child in group.child_groups:
                        print_group_tree(child, maxdepth)

            basegroup = I.get_group(pattern)
            print_group_tree(basegroup, maxdepth)
            sys.exit(0)

        else:
            results = { }
            for host in hosts:
                vars = I.get_variables(host)
                results.update({host: vars})

            return results

########################################################

if __name__ == '__main__':
    cli = Cli()
    (options, args) = cli.parse()
    try:
        results = cli.run(options, args)
    except errors.AnsibleError, e:
        # Generic handler for ansible specific errors
        print "ERROR: %s" % str(e)
        sys.exit(1)
    if options.json and not options.yaml:
        print utils.jsonify(results, format=True)
    else:
        print yaml.safe_dump(results)

